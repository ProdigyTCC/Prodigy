@{
    ViewData["Title"] = "Planos";
}

<div class="secao-light">
    <div class="title-planos container-fluid text-center pt-5"><h1>Conheça nossos planos</h1></div>
    <div class="text-planos container-fluid text-center pb-5"><h3>Selecione qual atende melhor sua necessidade</h3></div>

