@{
    @ViewData["Pagamento"]
}    

<div class="main-checkout container-fluid">
    <div class="card-plan-info">
        <div class="plan-info">
            <p class="plan-select">Plano selecionado:</p>
            <p class="name-plan">Starter</p>
            <hr class="m-0">
            <ul class="plan-details m-0">
                <li>Valor do plano: R$00,00</li>
                <li>Tipo do plano: Mensal</li>
                <li>Desconto: R$00,00</li>
            </ul>
        </div>
        <div class="section-total-plan">
            <p class="total-plan m-0 p-0">Total:</p>
            <p class="value-plan m-0 p-0">R$00,00</p>
        </div>

        @* <div class="payment-data">
        </div> *@
    </div>

    <div class="card-checkout-data d-flex flex-column justify-content-center">
        <div class="guide-checkout d-flex flex-row justify-content-center">
            <div class="guide">
                <div class="guide-icon">
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M18 9C18 13.9706 13.9706 18 9 18C4.02944 18 0 13.9706 0 9C0 4.02944 4.02944 0 9 0C13.9706 0 18 4.02944 18 9Z" fill="#30BEB2"/>
                        <path d="M8.604 11.6999V5.84991L9.117 6.38091H7.272V5.39991H9.774V11.6999H8.604Z" fill="#E2F0EF"/>
                    </svg>
                </div>
                <p class="guide-name">Forma de pagamento</p>
            </div>
            <div class="guide">
                <div class="guide-icon">
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M18 9C18 13.9706 13.9706 18 9 18C4.02944 18 0 13.9706 0 9C0 4.02944 4.02944 0 9 0C13.9706 0 18 4.02944 18 9Z" fill="#30BEB2"/>
                        <path d="M8.604 11.6999V5.84991L9.117 6.38091H7.272V5.39991H9.774V11.6999H8.604Z" fill="#E2F0EF"/>
                    </svg>
                </div>
                <p class="guide-name">Pagamento</p>
            </div>
            
            <div class="guide">
                <div class="guide-icon">
                    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M18 9C18 13.9706 13.9706 18 9 18C4.02944 18 0 13.9706 0 9C0 4.02944 4.02944 0 9 0C13.9706 0 18 4.02944 18 9Z" fill="#30BEB2"/>
                        <path d="M8.604 11.6999V5.84991L9.117 6.38091H7.272V5.39991H9.774V11.6999H8.604Z" fill="#E2F0EF"/>
                    </svg>
                </div>
                <p class="guide-name">Confirmar</p>
            </div>
        </div>

        <div class="options">
            <p class="options-title">Escolha o método de pagamento:</p>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    Cartão de Crédito/Débito
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    Paypal
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    PIX
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                <label class="form-check-label" for="flexRadioDefault1">
                    Boleto Bancário
                </label>
            </div>

        </div>

        <div class="button-advanced d-flex justify-content-center">
            <button class="primary-button">Avançar</button>
        </div>
    </div>
</div>

