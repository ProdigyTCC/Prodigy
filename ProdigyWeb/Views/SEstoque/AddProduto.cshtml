@{
    ViewData["Title"] = "Adicionar Produto";
}

<div class="main-addproduto p-5">

    <!-- INICIO FORMULARIO -->
        <div class="d-flex fundo">
            <div class="container formulario">
                <div class="group-input-contato"> @*Input = Nome do produto*@
                    <p class="label-estoque">Nome do produto</p>
                    <div class="input-contato input-group">
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Descrição do produto*@
                    <p class="label-estoque">Descrição do produto</p>
                    <div class="input-contato input-group">
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Quantidade*@
                    <p class="label-estoque">Quantidade</p>
                    <div class="input-contato input-group">
                        <input type="number" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Fabricante*@
                    <p class="label-estoque">Fabricante</p> 
                    <div class="input-contato input-group">
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Categoria*@
                    <p class="label-estoque">Categoria</p>
                    <div class="input-contato input-group">
                        <select class="form-select" aria-label="Default select example">
                            <option value="0" selected>Selecionar Categoria</option>
                            @if(ViewBag.CategProduto != null)
                            {
                                @foreach (var cgProduto in ViewBag.CategProduto)
                                {
                                <option value="@cgProduto.SCategoriaProdutoId">@cgProduto.Nome</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="mb-3"> @*Input = Adicionar imagem*@
                    <p class="label-estoque">Imagem</p> 
                    <input class="form-control" type="file" id="formFile">
                </div>
            </div>

            <div class="container formulario">
                <div class="group-input-contato"> @*Input = Data de validade*@
                    <p class="label-estoque">Data de validade</p>
                    <div class="input-contato input-group">
                        <input type="date" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Data de entrada*@
                    <p class="label-estoque">Data de entrada</p>
                    <div class="input-contato input-group">
                        <input type="date" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Valor de custo*@
                    <p class="label-estoque">Valor de custo</p>
                    <div class="input-contato input-group">
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato"> @*Input = Valor de venda*@
                    <p class="label-estoque">Valor de venda</p>
                    <div class="input-contato input-group">
                        <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                    </div>
                </div>

                <div class="group-input-contato d-flex flex-row align-items-center mb-5"> @*Input = Produto agrupado*@
                    <p class="label-estoque">Produto agrupado</p>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    </div>
                </div>

                <div class="d-flex flex-row">
                    <button type="button" class="button-small-cancel me-2">Limpar</button>
                    <button type="button" class="button-small-confirm ms-2">Salvar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- FIM FORMULARIO -->