@model ProdigyWeb.Models.Usuario
@{
    ViewData["Title"] = "Login";
}
  
  <div class="card-login">
    <img src="img/foto.png" alt="Imagem ilustrativa para o login">
      <div class="formulario">
          <form asp-controller="Usuario" asp-action="LoginUsuario">
                <label for="Email"><p>Email</p></label><br>
                <input type="email" asp-for="Email" id="email" placeholder="exemplo@exemplo.com" required>
                <br>
                <label for="Senha"><p>Senha</p></label><br>
                <input type="password" asp-for="Senha" id="" placeholder="*****************" required><br>
                <a href="">Esqueceu sua senha?</a><br>
                <button type="submit">Entrar</button>
          </form>
      </div>
    </div>
  <div class="registro"><a asp-area="" asp-controller="Usuario" asp-action="Cadastrar">NÃ£o tem conta? Cadastre-se</a></div>